---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const courses = ['ooi', 'funabashi', 'kawasaki', 'urawa'];

  const paths = await Promise.all(
    courses.map(async (course) => {
      const entries = await getCollection(course);
      if (entries.length > 0) {
        return {
          params: { course },
          props: { entry: entries[0] },
        };
      }
      return null;
    })
  );

  return paths.filter(Boolean);
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <article class="course-page">
    <div class="container">
      <div class="course-content">
        <Content />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
.course-page {
  padding: 4rem 0;
  min-height: 60vh;
}

.course-content {
  font-size: 1.05rem;
  line-height: 1.8;
}

.course-content :global(h1) {
  font-size: 2.5rem;
  margin-bottom: 1.5rem;
  color: #222;
}

.course-content :global(h2) {
  margin-top: 3rem;
  margin-bottom: 1rem;
  font-size: 1.75rem;
  color: #333;
  border-bottom: 2px solid #e0e0e0;
  padding-bottom: 0.5rem;
}

.course-content :global(h3) {
  margin-top: 2rem;
  margin-bottom: 0.75rem;
  font-size: 1.4rem;
  color: #444;
}

.course-content :global(p) {
  margin-bottom: 1.5rem;
}

.course-content :global(ul) {
  margin-bottom: 1.5rem;
  padding-left: 2rem;
}

.course-content :global(li) {
  margin-bottom: 0.75rem;
}

.course-content :global(a) {
  color: #0066cc;
  text-decoration: none;
  font-weight: 500;
}

.course-content :global(a:hover) {
  text-decoration: underline;
}

.course-content :global(strong) {
  font-weight: 700;
  color: #222;
}

@media (max-width: 768px) {
  .course-content :global(h1) {
    font-size: 1.75rem;
  }

  .course-content :global(h2) {
    font-size: 1.4rem;
  }

  .course-content :global(h3) {
    font-size: 1.2rem;
  }

  .course-content {
    font-size: 1rem;
  }
}
</style>
